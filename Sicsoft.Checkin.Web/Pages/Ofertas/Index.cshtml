                                    <th>Estado</th>
                                    <th>Comentario</th>
                                 @*   <th>Procesado SAP</th>*@
                                   

                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model.Listas)
                                {
                                    <tr>


                                        <td>
                                            @item.id
