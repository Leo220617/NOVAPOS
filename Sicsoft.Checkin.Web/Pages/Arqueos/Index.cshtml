                                <tr>

                                    <th>ID</th>
                                    <th>Acción</th>
                                    <th>Categoría</th>
                                    <th>Bodega</th>
                                    <th>Fecha Creado</th>
                                    <th>Generado Por</th>
                                    <th>Fecha Actualización</th>
                                    <th>Estado</th>

                                    @*   <th>Procesado SAP</th>*@


                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model.Listas)
                                {
                                    <tr>


                                        <td>
                                            @item.id
