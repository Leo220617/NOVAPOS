                        <table id="example1" class="table table-bordered table-striped">
                            <thead>
                                <tr>
                                     <th>ID</th>
                                    <th>Código</th>
                                   

                                    <th>Nombre</th>
                                     <th>Cédula</th>
                                     <th>Correo</th>
                                     <th>Teléfono</th>
                                     <th>Provincia</th>
                                      <th>Saldo</th>
                                      <th>Estado</th>
                                      <th>Procesado a SAP</th>
                                      <th>Acción</th>


                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model.Objeto)
                                {
                                <tr>
                                    
                                    <td>
                                        @item.id
                                    </td>

                                    <td>
                                        @item.Codigo
                                    </td>

                                  
                                    <td>         @item.Nombre </td>
                                     <td>
                                        @item.Cedula
                                    </td>
                                     <td>
                                        @item.Email
                                    </td>
                                     <td>
                                        @item.Telefono
                                    </td>
                                     <td>
                                        @item.Provincia
                                    </td>
                                     <td>
                                        @(Math.Round(item.Saldo,2).ToString("N",formato))
                                    </td>
                                     <td>
                                         @if(item.Activo)
                                            {
                                                <span class="badge badge-pill badge-success">Activo</span>

                                            }else
                                            {
                                                <span class="badge badge-pill badge-danger">Inactivo</span>
                                            }

                                    </td>
                                      <td>
                                        @if(item.ProcesadoSAP)
                                            {
                                                <span class="badge badge-pill badge-success">Procesado</span>

                                            }else
                                            {
                                                <span class="badge badge-pill badge-danger">Sin procesar</span>
                                            }

                                    </td>
                                      <td>
                                           @if(item.ProcesadoSAP)
                                           {
                                                   
                                                }else
                                                {
                                                     <button onclick="javascript: onClickModal('@item.id')" class="btn btn-info btn-xs">Enviar a SAP</button>
                                                }

                                    </td>
                                </tr>

                                }


                            </tbody>
                            <tfoot>
                                <tr>
                                     <th>ID</th>
                                   <th>Código</th>
                                   

                                    <th>Nombre</th>
                                     <th>Cédula</th>
                                     <th>Correo</th>
                                     <th>Teléfono</th>
                                     <th>Provincia</th>
                                      <th>Saldo</th>
                                      <th>Estado</th>
                                       <th>Procesado a SAP</th>
                                        <th>Acción</th>
                                </tr>
                            </tfoot>
                        </table>
                    </div>
                </div>
                <!-- /.box-body -->
            </div>
            <!-- /.box -->
        </div>
        <!-- /.col -->
    </div>
    <!-- /.row -->
</section>
